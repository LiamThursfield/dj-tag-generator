APP_NAME="DJ Tag Generator"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=sail
DB_PASSWORD=password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# MinIO / S3-Compatible Storage (for local development)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY_ID=sail
MINIO_SECRET_ACCESS_KEY=password
MINIO_BUCKET=dj-tags
MINIO_USE_PATH_STYLE_ENDPOINT=true

# Cloudflare R2 (for production)
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_BUCKET=
# R2_ENDPOINT=https://[account-id].r2.cloudflarestorage.com

# DJ Tag Generator - Text-to-Speech Configuration
# Choose one: openai, google, elevenlabs, polly
TTS_SERVICE=openai
TTS_API_KEY=
TTS_DEFAULT_VOICE=alloy
TTS_MODEL=tts-1

# Google Cloud TTS (if using google)
# GOOGLE_CLOUD_PROJECT_ID=
# GOOGLE_CLOUD_KEY_FILE=

# ElevenLabs (if using elevenlabs)
# ELEVENLABS_API_KEY=
# ELEVENLABS_DEFAULT_VOICE_ID=

# AWS Polly (if using polly)
# AWS_POLLY_REGION=us-east-1
# AWS_POLLY_DEFAULT_VOICE=Joanna

# Audio Processing
AUDIO_OUTPUT_FORMAT=mp3
AUDIO_SAMPLE_RATE=44100
AUDIO_BITRATE=192k
AUDIO_MAX_DURATION=30
AUDIO_STORAGE_DISK=local
AUDIO_CLEANUP_DAYS=30

# FFmpeg Path (usually auto-detected)
# FFMPEG_BINARY=/usr/bin/ffmpeg

VITE_APP_NAME="${APP_NAME}"
